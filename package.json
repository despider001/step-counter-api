{
    "name": "step-counting-api",
    "version": "0.1.0",
    "description": "This app provides with API to count steps",
    "repository": {
        "type": "git",
        "url": "https://github.com/ApsisRecruitment/solution-Full-Stack-Sadiqur-Rahman"
    },
    "author": "Sadiqur Rahman",
    "scripts": {
        "build-ts": "tsc",
        "build": "npm run build-ts && npm run lint",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/www/server.js",
        "start": "node dist/www/server.js",
        "test": "jest --forceExit --coverage --verbose",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/www/server.js",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\""
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/concurrently": "5.2.1",
        "@types/errorhandler": "^1.5.0",
        "@types/eslint": "7.2.6",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.1",
        "@types/node": "^14.18",
        "@types/supertest": "2.0.10",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "4.14.2",
        "@typescript-eslint/parser": "4.14.2",
        "body-parser": "^1.20.0",
        "concurrently": "6.0.2",
        "errorhandler": "^1.5.1",
        "eslint": "7.19.0",
        "express": "^4.17.3",
        "jest": "^27.5.1",
        "nodemon": "^2.0.7",
        "supertest": "6.1.3",
        "ts-jest": "^27.1.4",
        "ts-node": "9.1.1",
        "typescript": "4.1.3"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "sanitize": "^2.1.0"
    }
}
